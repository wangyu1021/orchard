<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.orchard.dao.EnterpriseDynamicDao">
	<select id="selectEnterpriseDynamic"
		resultType="cn.orchard.pojo.EnterpriseDynamic">
		select * from enterprise_dynamic
	</select>
	<insert id="insertEnterpriseDynamic">
		INSERT INTO `orchard`.`enterprise_dynamic` (`enterprise_number`,
		`title`, `content`, `author`, `note`, `state`, `created_time`,
		`update_time`) VALUES (#{enterprise_number}, #{title},#{content}, #{author}, #{note}, 
			#{state}, #{created_time}, #{update_time});

	</insert>
	 <!-- 通过sql标签提取共性 -->
    <sql id="queryWhereId">
      from enterprise_dynamic
      <where>
         <if test="title!=null and title!=''">
             title like concat("%",#{title},"%")
         </if>
      </where>
    </sql>
    <!-- 按条件统计总记录数 -->
    <select id="getRowCount"
            resultType="int">
         select count(*)
         <!-- 通过include标签引入通过sql标签定义的id -->
         <include refid="queryWhereId"/>
    </select>
    <!-- 查询当前页记录 -->
    <select id="findPageObjects"
            resultType="cn.orchard.pojo.EnterpriseDynamic">
         select *
         <include refid="queryWhereId"/>
         order by created_time desc
         limit #{startIndex},#{pageSize}  
    </select>
</mapper>